<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">
    <TextView
        android:text="Enter a lettered phone number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:id="@+id/PhoneNumberText"
        android:text="1-UJJ-ADGJ"
        android:layout_toRightOf="@id/PhoneNumberText"
        android:inputType="phone" />
    <Button
        android:text="Translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PhoneNumberText"
        android:id="@+id/TranslateButton" />
    <TextView
        android:text="Translated Number: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TranslateButton"
        android:id="@+id/textView3" />
    <Button
        android:text="CALL: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:id="@+id/btnCall"/>
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below= "@+id/TranslateButton"
        android:textColor="@android:color/holo_red_light"
        android:textSize="60px"
        android:id="@+id/TranslatedPhoneword"
        android:layout_toRightOf="@id/textView3" />
    <Button
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCall"
        android:id="@+id/ExitBut" />


</RelativeLayout>
